{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (bin target)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=${workspaceFolderBasename}", // Builds the default binary in your project
                    "--package=${workspaceFolderBasename}"
                ],
                "filter": {
                    "name": "${workspaceFolderBasename}",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            // ðŸ’¡ Windows Performance Fix (Crucial for speed on Windows)
            "env": {
                "_NO_DEBUG_HEAP": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (unit tests)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run", // Tells cargo to build tests without running them
                    "--bin=${workspaceFolderBasename}",
                    "--package=${workspaceFolderBasename}"
                ],
                "filter": {
                    "name": "${workspaceFolderBasename}",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ],
            "env": {
                "_NO_DEBUG_HEAP": "1"
            }
        }
    ]
}
